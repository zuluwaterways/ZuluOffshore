<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <solid android:color="#333333" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#333333" />
        </shape>
    </item>
    <item android:bottom="3px" android:right="3px">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
    <item android:right="5dp" android:gravity="center|right" >

        <scale
            android:scaleGravity="center|right"
            android:level="1"
            android:scaleHeight="40%"
            android:scaleWidth="40%">
            <bitmap android:src="@drawable/drop" android:alpha="0.3"/>
        </scale>
        <color android:color="@color/white"/>
    </item>
</layer-list>